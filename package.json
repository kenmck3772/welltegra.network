{
  "name": "welltegra.network",
  "version": "1.0.0",
  "description": "A comprehensive web-based application for well engineering analysis, real-time drilling data monitoring, and problem-solving in complex well operations.",
  "main": "module-loader.js",
  "scripts": {
    "build:css": "tailwindcss -c tailwind.config.js -i styles/tailwind.css -o assets/css/tailwind.css --minify",
    "format": "prettier --write CHECKLIST.md RELEASE_NOTES.md",
    "lint:links": "linkinator http://127.0.0.1:8000 --silent --skip 'mailto:*' --timeout 3000",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "jest",
    "test:unit:watch": "jest --watch",
    "test:unit:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report test-results/html"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@types/jest": "^30.0.0",
    "autoprefixer": "^10.4.19",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "jest-localstorage-mock": "^2.4.26",
    "linkinator": "^4.0.2",
    "playwright": "^1.56.1",
    "postcss": "^8.4.38",
    "prettier": "^3.3.2",
    "tailwindcss": "^3.4.11"
  }
}
